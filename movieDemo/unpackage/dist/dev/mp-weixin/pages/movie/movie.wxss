/* 电影预告视频 start */
.player {
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	    -ms-flex-pack: center;
	        justify-content: center;
	background-color: black;
}
.movie-video {
	width: 100%;
	height: 440rpx;
}
/* 电影预告视频 start */
/* 影片基本信息 start */
.movie-info {
	padding: 40rpx 20rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	    -ms-flex-direction: row;
	        flex-direction: row;
	background-color: #f7f4f9;
}
.movie-cover {
	width: 260rpx;
	height: 380rpx;
	-webkit-flex-shrink: 0;
	    -ms-flex-negative: 0;
	        flex-shrink: 0;
	/* 设置图片不被缩放 */
}
.movie-i-right {
	overflow: hidden;
	margin-left: 30rpx;
}
.movie-name {
	font-size: 30px;
}
.movie-intro {
	width: 100%;
	font-size: 13px;
	color: darkgray;
	white-space: nowrap;
	-o-text-overflow: ellipsis;
	   text-overflow: ellipsis;
	overflow: hidden;
	line-height: 36rpx;
}
/* 评分块 */
.score-block {
	background-color: #FFFFFF;
	margin-top: 20rpx;
	width: 360rpx;
	height: 90rpx;
	padding: 20rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	    -ms-flex-direction: row;
	        flex-direction: row;
	-webkit-justify-content: space-around;
	    -ms-flex-pack: distribute;
	        justify-content: space-around;
	-webkit-box-shadow: 3px 2px 3px #ccc;
	        box-shadow: 3px 2px 3px #ccc;
	border-radius: 10rpx;
}
.big-score {
}
.score-words {
	font-size: 12px;
	color: gray;
}
.movie-score {
	font-size: 26px;
	font-weight: bold;
	color: #f3ab2a;
	margin-left: 8rpx;
	line-height: 60rpx;
}
.prise-counts{
	font-size: 12px;
	color: gray;
	line-height: 44rpx;
}
/* 影片基本信息 end */
/* 剧情介绍  start */
.plots-block{
	background-color: #f7f4f9;
	padding: 20rpx 40rpx;
}
.plots-title{
	color: #a9a9a9;
	font-size: 14px;
}
.plots-desc{
	margin-top: 10rpx;
	font-size: 16px;
	line-height: 1.5;
}
/* 剧情介绍  end */

